<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.controlderuta.guardianroute.TransitionActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pictuturetransition"
        android:orientation="vertical"
        android:gravity="center"

        android:weightSum="1">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:background="@drawable/logoguardian"
            android:layout_marginBottom="@dimen/margin40dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin30dp"
            android:layout_marginTop="@dimen/margin60dp"
            android:layout_marginLeft="@dimen/margin16dp"
            android:layout_marginRight="@dimen/margin16dp"
            android:text="@string/transitionintro"
            android:textAlignment="center"
            android:textSize="@dimen/letter15dp"
            android:textColor="@color/colorWhite"

            />

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>